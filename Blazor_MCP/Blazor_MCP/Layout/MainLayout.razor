@inherits LayoutComponentBase
@inject LanguageService LangService

@* Required *@
<MudThemeProvider IsDarkMode="true"/>
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Dark">
        <MudText Typo="Typo.h6" Class="ml-2">@Loc["Title"]</MudText>
        <MudSpacer />
        <MudButton Class="m-1" Variant="Variant.Filled" Color="Color.Warning" OnClick="@(() => LangService.ChangeCulture("en"))">English</MudButton>
        <MudButton Class="m-1" Variant="Variant.Filled" Color="Color.Warning" OnClick="@(() => LangService.ChangeCulture("ja"))">日本語</MudButton>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
